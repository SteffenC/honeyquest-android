<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
        <TextSwitcher
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtDraw" android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" android:animateFirstView="true" android:minHeight="400dp"
                android:minWidth="250dp"/>
        <SeekBar
                android:progressDrawable="@drawable/progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:progress="0" android:max="3" android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true" android:layout_marginBottom="32dp"
                android:layout_alignParentEnd="true" android:minWidth="400dp"/>
</RelativeLayout>